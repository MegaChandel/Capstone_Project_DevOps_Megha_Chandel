pipeline {
    agent any  

    stages {
        stage('Checkout Code') {  
            steps {
                git branch: 'main', url: 'https://github.com/MegaChandel/Capstone_Project_DevOps_Megha_Chandel.git'
            }
        }

        stage('Setup Virtual Environment') {
            steps {
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {  
            steps {
                script {
                    def testDirExists = sh(script: '[ -d tests ] && echo "EXISTS"', returnStdout: true).trim()
                    if (testDirExists == "EXISTS") {
                        sh '''
                        source venv/bin/activate
                        python3 -m unittest discover -s tests -p "test_*.py"
                        '''
                    } else {
                        echo "No tests directory found, skipping tests..."
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                source venv/bin/activate
                docker build -t flask-app:latest .
                '''
            }
        }

        stage('Push Docker Image to Docker Hub') {  
            steps {
                script {
                    sh '''
                    source venv/bin/activate
                    echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin
                    docker tag flask-app:latest meghachandel/flask-app:latest
                    docker push meghachandel/flask-app:latest
                    '''
                }
            }
        }
    }
}
